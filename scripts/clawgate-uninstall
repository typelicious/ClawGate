#!/usr/bin/env bash
set -euo pipefail
helpers=(
  clawgate-install
  clawgate-start
  clawgate-stop
  clawgate-restart
  clawgate-status
  clawgate-logs
  clawgate-health
  clawgate-update
  clawgate-uninstall
)

sudo systemctl disable --now clawgate.service || true
sudo rm -f /etc/systemd/system/clawgate.service
for helper in "${helpers[@]}"; do
  sudo rm -f "/usr/local/bin/$helper"
done
sudo systemctl daemon-reload
echo "removed: /etc/systemd/system/clawgate.service"
echo "removed helper links from: /usr/local/bin"
