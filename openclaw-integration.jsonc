// OpenClaw Integration â€“ ClawGate
// =========================================
//
// Add this block to your ~/.openclaw/openclaw.json.
//
// Option A: ClawGate as your primary provider (recommended)
// ---------------------------------------------------------
// ClawGate handles routing, fallback, and model selection.
// OpenClaw only needs to talk to one provider entry.

{
  "models": {
    "mode": "merge",
    "providers": {
      "clawgate": {
        "baseUrl": "http://127.0.0.1:8090/v1",
        "apiKey": "local",
        "auth": "api-key",
        "api": "openai-completions",
        "models": [
          {
            "id": "auto",
            "name": "ClawGate Auto-Router",
            "contextWindow": 128000,
            "maxTokens": 8000
          },
          {
            "id": "deepseek-chat",
            "name": "DeepSeek Chat (via ClawGate)",
            "contextWindow": 128000,
            "maxTokens": 8000
          },
          {
            "id": "deepseek-reasoner",
            "name": "DeepSeek Reasoner (via ClawGate)",
            "contextWindow": 128000,
            "maxTokens": 8000
          },
          {
            "id": "gemini-flash-lite",
            "name": "Gemini Flash-Lite (via ClawGate)",
            "contextWindow": 1000000,
            "maxTokens": 8000
          },
          {
            "id": "gemini-flash",
            "name": "Gemini Flash (via ClawGate)",
            "contextWindow": 1000000,
            "maxTokens": 8000
          },
          {
            "id": "openrouter-fallback",
            "name": "OpenRouter Fallback (via ClawGate)",
            "contextWindow": 128000,
            "maxTokens": 8000
          }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "clawgate/auto",
        "fallbacks": []
      },
      "models": {
        "clawgate/auto": { "alias": "auto" },
        "clawgate/deepseek-chat": { "alias": "ds" },
        "clawgate/deepseek-reasoner": { "alias": "r1" },
        "clawgate/gemini-flash-lite": { "alias": "lite" },
        "clawgate/gemini-flash": { "alias": "flash" },
        "clawgate/openrouter-fallback": { "alias": "or" }
      },
      "imageModel": {
        "primary": "clawgate/gemini-flash-lite",
        "fallbacks": []
      },
      "heartbeat": {
        "every": "12h",
        "model": "clawgate/gemini-flash-lite",
        "suppressToolErrorWarnings": true
      },
      "subagents": {
        "model": "clawgate/auto",
        "maxConcurrent": 10
      }
    }
  }
}

// Option B: ClawGate alongside direct providers
// ---------------------------------------------
